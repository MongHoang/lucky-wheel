<% layout('layout') -%>

<h3>Auto logout của: <%= u.display_name %> (<span class="text-monospace"><%= u.username %></span>)</h3>
<p class="text-muted">Khoảng thời gian: 7 ngày gần nhất.</p>

<table class="table table-sm">
  <thead>
    <tr>
      <th>#</th>
      <th>Thời điểm</th>
      <th>Loại</th>
    </tr>
  </thead>
  <tbody>
    <% if (!events || events.length === 0) { %>
      <tr><td colspan="3" class="text-muted">Không có bản ghi auto logout.</td></tr>
    <% } %>
    <% (events || []).forEach((e, i) => { %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= new Date(e.at).toLocaleString('vi-VN') %></td>
        <td><%= e.type %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<a href="/admin/users" class="btn btn-light">← Quay lại Users</a>
